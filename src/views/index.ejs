<!DOCTYPE html>
<html lang="es">
    <body style="background: #CAFFFF"></body>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    <title>Inicio de la plataforma</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">

</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="/" class="navbar-brand">Veterinaria ACM</a>
    </nav><br>
    <div class="container">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <h2>Ingrese los datos de la mascota</h2>
                        <div class="form-group">
                            <input type="text" name="Nombre" placeholder="Nombre de la mascota" class="form-control" >
                        </div>
                        <div class="form-group">
                            <input type="text" name="Tipo_Mascota" placeholder="Tipo de mascota" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="Sexo" placeholder="Sexo" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="Edad" placeholder="Edad" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="Peso_Kg" placeholder="Peso en Kg" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="Raza" placeholder="Raza" class="form-control">
                        </div><br>
                        <button class="btn btn-primary">Registrar</button>
                    </form>
                </div>
            </div>
        </div>
        <h1>DATOS EN EXISTENCIA</h1>
        <div class="col-md-9">
            <table class="table table-bordered table-hover" style="background: #00CACA">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre de la mascota</th>
                        <th>Tipo de mascota</th>
                        <th>Sexo</th>
                        <th>Edad</th>
                        <th>Peso en Kg</th>
                        <th>Raza</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < valores.length; i++){  %>
                        <tr style="background: #ffffff;">
                            <td><%= i+1  %></td>
                            <td><%= valores[i].Nombre  %></td>
                            <td><%= valores[i].Tipo_Mascota  %></td>
                            <td><%= valores[i].Sexo  %></td>
                            <td><%= valores[i].Edad  %></td>
                            <td><%= valores[i].Peso_Kg  %></td>
                            <td><%= valores[i].Raza  %></td>
                            <td><a href='/del/<%= valores[i].id %>'> Eliminar</a> &nbsp;
                            <a href='/edit/<%= valores[i].id %>'> Editar</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>